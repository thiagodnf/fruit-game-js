<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head', {roomName: room.name || ""}); %>
</head>

<body>
    <%- include('includes/navbar'); %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">
                <div class="card">
                    <div class="card-header ">
                        <div class="row">
                            <div class="col mt-1 font-weight-bold"><%= room.name %></div>
                            <div class="col-auto">
                                <span id="count-down" class="mr-2"> 00:00:00</span>
                                <button type="button" class="btn btn-success btn-sm" id= "btn-start">Start</button>
                                <a class="btn btn-sm btn-danger" href="/">Leave</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body ">
                        <canvas id="canvas" width="800px" height="500px"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="card-header ">Ranking</div>
                    <ul id="ranking" class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center pt-1 pb-1">
                            Waiting Players
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="newPlayerModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="form-new-player" method="POST" action="/rooms/create" autocomplete="off" autocorrect="off">
                    <div class="modal-header">
                        <h5 class="modal-title">New Player</h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="userName">Name</label>
                            <input type="search" class="form-control" name="playerName" id="playerName" autocomplete="off" autocorrect="off" autofocus required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Join</button>
                        <a href="/" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal" id="winners-modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Winners</h5>
                </div>
                <div class="modal-body">
                    <div class="row podium">
                        <div class="col-md-4 text-center">
                            <div class="step-container ">
                                <span class="second-step-name">&nbsp;</span>
                                <div class="pt-2 second-step text-white">2</div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="step-container">
                                <span class="first-step-name">&nbsp;</span>
                                <div class="pt-2 first-step text-white">1</div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="step-container">
                                <span class="third-step-name">&nbsp;</span>
                                <div class="pt-1 third-step text-white">3</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-dismiss="modal">Play Again!</button>
                    <a href="/" class="btn btn-outline-secondary">Exit</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('includes/footer'); %>
    <script type="text/javascript">
        const roomId = "<%= room.id %>";
    </script>
    <script type="text/javascript" src="/js/room.js"></script>
</body>

</html>
