<div class="modal fade" id="modal-new-room" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="form-new-room" method="POST" action="/new-room">
                <div class="modal-header">
                    <h5 class="modal-title">New Room</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="roomName" class="col-4 col-form-label text-right">Room Name</label>
                        <div class="col-8">
                            <input type="text" class="form-control" name="roomName" id="roomName" required minlength="5" maxlength="50" autofocus>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-4 col-form-label text-right">Password</label>
                        <div class="col-8">
                            <input type="password" class="form-control" name="password" id="password">
                            <small class="form-text text-muted">Let it blank for no password</small>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group row">
                        <label for="maxPlayers" class="col-4 col-form-label text-right">Max Players</label>
                        <div class="col-8">
                            <input type="number" class="form-control" name="maxPlayers" id="maxPlayers" required min="2" value="10" max="50" step="1">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="scenario" class="col-4 col-form-label text-right">Scenario</label>
                        <div class="col-8">
                            <select class="form-control" name="scenario" id="scenario" required>
                                <option value='empty'>Empty</option>
                                <option value='bordered' selected>Bordered</option>
                                <option value='bomberman'>Bomberman</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="gameModeType" class="col-4 col-form-label text-right">Game Mode</label>
                        <div class="col-8">
                            <select class="form-control" name="gameModeType" id="gameModeType" required>
                                <option value='competitive' selected>Competitive</option>
                                <option value='timed'>Timed</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="gameModeValue" class="col-4 col-form-label text-right">Max Score</label>
                        <div class="col-8">
                            <input type="number" class="form-control" name="gameModeValue" id="gameModeValue" required min="10" value="20" max="200" step="1">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>